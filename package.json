{
  "name": "veon-replit",
  "version": "1.0.0",
  "description": "VEON - An emotionally adaptive AI companion",
  "private": true,
  "scripts": {
    "setup": "./setup.sh",
    "install:all": "npm install --prefix backend && npm install --prefix frontend",
    "dev:backend": "npm run dev --prefix backend",
    "dev:frontend": "npm run dev --prefix frontend",
    "start:backend": "npm start --prefix backend",
    "start:frontend": "npm run preview --prefix frontend",
    "build:frontend": "npm run build --prefix frontend",
    "clean": "rm -rf backend/node_modules frontend/node_modules backend/veon.db"
  },
  "keywords": [
    "ai",
    "chatbot",
    "emotion-detection",
    "react",
    "nodejs",
    "socket.io",
    "three.js",
    "huggingface"
  ],
  "author": "Abhishek Kumar Singh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/absksync/veon_replit.git"
  }
}
